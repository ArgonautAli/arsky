{
  "name": "arsky",
  "version": "1.0.8",
  "description": "A CLI tool to fetch ASCII art or create your own from imagepath",
  "main": "dist/index.js",
  "bin": {
    "arsky": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node bin/index.ts",
    "dev": "ts-node bin/index.ts",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "prettier": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "prepare": "lefthook install"
  },
  "keywords": [
    "ascii",
    "art",
    "cli"
  ],
  "author": "ArgonautAli",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/ArgonautAli/arsky"
  },
  "dependencies": {
    "axios": "^1.7.2",
    "boxen": "^5.1.2",
    "chalk": "^4.1.2",
    "commander": "^12.1.0",
    "sharp": "^0.33.4",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^19.2.2",
    "@evilmartians/lefthook": "^1.6.18",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.30",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "commitlint": "^19.3.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.3.2",
    "ts-jest": "^29.1.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.2"
  }
}
